<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/mapID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MapID : "/>

    <TextView
        android:id="@+id/mapName"
        android:layout_below="@id/mapID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map Name : "/>

    <TextView
        android:id="@+id/mapDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapName"
        android:text="Map description : "/>

    <TextView
        android:id="@+id/numOffReports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mapDescription"
        android:text="Number of offensive reports : " />

    <TextView
        android:id="@+id/numUnfReports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/numOffReports"
        android:text="Number of offensive reports : " />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/profilePicture"
        android:layout_marginTop="20px"
        android:layout_marginRight="20px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />


    <Button
        android:id="@+id/closeMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/mapID"
        android:layout_toRightOf="@+id/mapID"
        android:onClick="closeMap"
        android:text="Close" />


    <Button
        android:id="@+id/banUser1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/profilePicture"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/profilePicture"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:onClick="banUser1"
        android:text="Ban" />


</RelativeLayout>