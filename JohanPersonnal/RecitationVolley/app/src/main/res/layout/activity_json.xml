<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="johan.istate.edu.recitationvolley.JSONActivity">

    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">



        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="JSON Object request"
            android:onClick="sendJSONObjectReq"
            android:id="@+id/JSONObjRequest"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="JSON Array request"
            android:onClick="sendJSONObjectReq"
            android:id="@+id/JSONArrReq"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Response" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
